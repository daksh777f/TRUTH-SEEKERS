# ===========================================
# TrustLens Backend Configuration
# ===========================================
# Copy this file to .env and fill in your values

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/v1
SECRET_KEY=your-super-secret-key-change-in-production

# Database (SQLite for local dev, PostgreSQL for production)
# For local development without Docker, use SQLite:
DATABASE_URL=sqlite+aiosqlite:///./trustlens.db
# For Docker/Production, use PostgreSQL:
# DATABASE_URL=postgresql://trustlens:trustlens_dev_password@localhost:5432/trustlens

# Redis (optional for local dev)
REDIS_URL=redis://localhost:6379/0

# ===========================================
# LLM Provider - Groq (FREE!)
# ===========================================
# Get your FREE API key at: https://console.groq.com/keys

GROQ_API_KEY=gsk_your_groq_api_key_here

# Model options (all FREE on Groq):
# - llama-3.1-70b-versatile (best quality)
# - llama-3.1-8b-instant (faster)
# - mixtral-8x7b-32768 (alternative)
LLM_MODEL=llama-3.1-70b-versatile
LLM_MODEL_FAST=llama-3.1-8b-instant

# ===========================================
# Search APIs
# ===========================================

# DuckDuckGo is used by default (FREE, no API key needed!)
USE_FREE_SEARCH=true

# Optional: SerpAPI for better results (has free tier)
# SERPAPI_API_KEY=your-serpapi-key

# Optional: Google Custom Search
# GOOGLE_API_KEY=your-google-api-key
# GOOGLE_CSE_ID=your-custom-search-engine-id

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_PER_MINUTE=10
RATE_LIMIT_PER_HOUR=100

# ===========================================
# Caching
# ===========================================
CACHE_TTL_SECONDS=3600
CONTENT_HASH_CACHE_TTL=86400

# ===========================================
# Agent Configuration
# ===========================================
MAX_CLAIMS_PER_ARTICLE=50
MAX_EVIDENCE_PER_CLAIM=10
VERIFICATION_TIMEOUT_SECONDS=60
ENABLE_CROSS_VERIFICATION=false
CROSS_VERIFICATION_THRESHOLD=0.3
